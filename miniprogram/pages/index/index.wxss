/* 将GIF图片全屏占满整个窗口 */
.gif {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}
/* 设置播放按钮样式 */
button {
  background-color: #43C8B5;
  border: none;
  color: white;
  font-size: 16px;
  padding: 10px;
  border-radius: 4px;
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
}
.stopPlaying{
  background-color: rgb(196, 124, 97);
}

